<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="spectrum.jfx.ui.controller.TapeLibraryController"
            prefWidth="800" prefHeight="600">

    <!-- Toolbar -->
    <top>
        <ToolBar>
            <Button text="%btn.play" fx:id="playButton" onAction="#onPlay" styleClass="play-button">
                <tooltip>
                    <Tooltip text="%tooltip.play"/>
                </tooltip>
            </Button>
            <Button text="%btn.stop" fx:id="stopButton" onAction="#onStop" styleClass="stop-button">
                <tooltip>
                    <Tooltip text="%tooltip.stop"/>
                </tooltip>
            </Button>
            <Button text="%btn.flashLoad" fx:id="flashLoad" onAction="#onFlashLoad">
                <tooltip>
                    <Tooltip text="%tooltip.flashLoad"/>
                </tooltip>
            </Button>
            <Button text="%btn.fastLoad" fx:id="fastLoad" onAction="#onFastLoad">
                <tooltip>
                    <Tooltip text="%tooltip.fastLoad"/>
                </tooltip>
            </Button>
            <Separator/>
            <Button text="%btn.addFile" fx:id="addFileButton" onAction="#onAddFile">
                <tooltip>
                    <Tooltip text="%tooltip.addFile"/>
                </tooltip>
            </Button>
            <Button text="%btn.removeFile" fx:id="removeFileButton" onAction="#onRemoveFile">
                <tooltip>
                    <Tooltip text="%tooltip.removeFile"/>
                </tooltip>
            </Button>
            <Separator/>
            <Button text="%btn.clearAll" fx:id="clearAllButton" onAction="#onClearAll">
                <tooltip>
                    <Tooltip text="%tooltip.clearAll"/>
                </tooltip>
            </Button>
            <Separator/>
            <CheckBox text="%btn.tapeSound" fx:id="toggleTapeSound" onAction="#onToggleTapeSound">
                <tooltip>
                    <Tooltip text="%tooltip.tapeSoundToggle"/>
                </tooltip>
            </CheckBox>
            <Separator/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="%tape.ready"/>
        </ToolBar>
    </top>
    <!-- Main content -->
    <center>
        <SplitPane dividerPositions="0.4">
            <!-- Left panel - File collection -->
            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="%tape.collection" styleClass="section-header"/>

                <ListView fx:id="fileListView" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="%tape.collectionEmpty"
                               textAlignment="CENTER" styleClass="placeholder-text"/>
                    </placeholder>
                </ListView>

                <!-- Collection info -->
                <VBox spacing="2">
                    <Label fx:id="collectionInfoLabel" text="Файлов: 0, Секций: 0"
                           styleClass="info-text"/>
                    <Label fx:id="collectionSizeLabel" text="Размер: 0 байт"
                           styleClass="info-text"/>
                </VBox>
            </VBox>

            <!-- Right panel - File sections -->
            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Selected file info -->
                <VBox spacing="3">
                    <Label text="%tape.fileInfo" styleClass="section-header"/>
                    <Label fx:id="fileInfoLabel" text="%tape.noFileSelected"
                           styleClass="file-info-text" wrapText="true"/>
                    <Label fx:id="fileTypeLabel" text="" styleClass="info-text"/>
                    <Label fx:id="fileSizeLabel" text="" styleClass="info-text"/>
                </VBox>

                <Separator/>

                <!-- File sections -->
                <VBox VBox.vgrow="ALWAYS" spacing="5">
                    <Label text="%tape.fileSections" styleClass="section-header"/>

                    <ListView fx:id="sectionListView" VBox.vgrow="ALWAYS">
                        <placeholder>
                            <Label text="%tape.noSectionsAvailable"
                                   textAlignment="CENTER" styleClass="placeholder-text"/>
                        </placeholder>
                    </ListView>
                </VBox>

                <!-- Section controls -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="%btn.gotoSection" fx:id="gotoSectionButton" onAction="#onGotoSection"
                            disable="true">
                        <tooltip>
                            <Tooltip text="%tooltip.gotoSection"/>
                        </tooltip>
                    </Button>
                    <Label fx:id="sectionInfoLabel" text="" styleClass="info-text"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- Status bar -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="status-bar">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Label fx:id="playbackStatusLabel" text="%tape.stopped"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="currentFileLabel" text=""/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="currentSectionLabel" text=""/>
            <Region HBox.hgrow="ALWAYS"/>
            <ProgressBar fx:id="playbackProgressBar" visible="false" prefWidth="150"/>
        </HBox>
    </bottom>

</BorderPane>