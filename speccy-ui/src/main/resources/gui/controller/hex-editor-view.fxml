<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="spectrum.jfx.ui.controller.HexEditorController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0"/>
            </padding>

            <!-- Заголовок секции -->
            <Label fx:id="titleLabel" text="Section HEX Editor"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- Информация о секции -->
            <Label fx:id="infoLabel" text="Type: DATA, Length: 0 bytes"
                   style="-fx-font-size: 12px;"/>

            <Separator/>

            <!-- Заголовки колонок -->
            <HBox spacing="0" alignment="CENTER_LEFT">
                <!-- Offset колонка -->
                <Label text="Offset" prefWidth="70" alignment="CENTER"
                       style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>

                <Separator orientation="VERTICAL" prefHeight="20"/>

                <!-- HEX колонки - каждый байт отдельно -->
                <HBox spacing="0" prefWidth="400">
                    <Label text="00" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="01" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="02" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="03" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="04" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="05" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="06" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="07" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>

                    <!-- Пробел между группами -->
                    <Label text="" prefWidth="10"/>

                    <Label text="08" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="09" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0A" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0B" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0C" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0D" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0E" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                    <Label text="0F" prefWidth="22" alignment="CENTER"
                           style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7;"/>
                </HBox>

                <Separator orientation="VERTICAL" prefHeight="20"/>

                <!-- ASCII заголовок -->
                <Label text="ASCII" prefWidth="130" alignment="CENTER_LEFT"
                       style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 12px; -fx-font-weight: bold; -fx-opacity: 0.7; -fx-padding: 0 0 0 10;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <!-- HEX данные в виде таблицы -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="hexDataContainer" spacing="0">
                <padding>
                    <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="10.0"/>
                </padding>
                <Button fx:id="basicView" text="%btn.basicView" onAction="#onBasicView" prefWidth="80.0"/>
            </HBox>
            <Separator/>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="10.0"/>
                </padding>

                <Button fx:id="closeButton" text="%btn.close" onAction="#onClose" prefWidth="80.0"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>