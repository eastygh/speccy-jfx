<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender для вывода в консоль -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender для вывода в файл -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zx-spectrum-emulator.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Ротация ежедневно -->
            <fileNamePattern>logs/zx-spectrum-emulator.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Хранить логи за последние 30 дней -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логирование для конкретных пакетов -->

    <!-- Детальное логирование для CPU -->
    <logger name="spectrum.jfx.hardware.cpu" level="INFO" />

    <!-- Умеренное логирование для памяти -->
    <logger name="spectrum.jfx.hardware.memory" level="WARN" />

    <!-- Логирование видеосистемы -->
    <logger name="spectrum.jfx.hardware.video" level="INFO" />

    <!-- Логирование звука -->
    <logger name="spectrum.jfx.hardware.sound" level="INFO" />

    <!-- Логирование клавиатуры -->
    <logger name="spectrum.jfx" level="DEBUG" />

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
<!--        <appender-ref ref="FILE" />-->
    </root>

    <!-- Профиль для отладки -->
    <springProfile name="debug">
        <root level="DEBUG">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
        </root>
    </springProfile>

</configuration>